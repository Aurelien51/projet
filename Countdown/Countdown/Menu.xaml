<Window x:Name="menuWindow" x:Class="Countdown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Des chiffres et des lettres" Height="296" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Des Chiffres et des Lettres" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="newCountdownGame" Content="Jouer au Compte est bon" Margin="100,100,100,0" VerticalAlignment="Top" Click="countdownGame_Click"/>
        <Button x:Name="newLongestwordGame" Content="Jouer au Mot le plus long" Margin="100,150,100,0" VerticalAlignment="Top" Click="longestwordGame_Click"/>
        <Button x:Name="quit" Content="Quitter" Margin="100,200,100,0" VerticalAlignment="Top" Click="quit_Click"/>

    </Grid>
</Window>
